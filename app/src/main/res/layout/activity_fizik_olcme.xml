<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/k"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dersler.fizikOlcmeAcitivity">

    <TextView
        android:id="@+id/yogunlukText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="63dp"
        android:text="Yoğunluk Hesapla"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/kütleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:text="m : "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/v"
        app:layout_constraintTop_toTopOf="@+id/kütleText" />

    <EditText
        android:id="@+id/kütleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Kütle giriniz"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yogunlukText" />

    <TextView
        android:id="@+id/v"
        android:layout_width="46dp"
        android:layout_height="78dp"
        android:text=" v :"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/p"
        app:layout_constraintTop_toTopOf="@+id/hacimText" />

    <EditText
        android:id="@+id/hacimText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:hint="Hacim giriniz"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/hesaplaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kütleText" />

    <Button
        android:id="@+id/hesaplaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:onClick="yogunlukHesapla"
        android:text="HESAPLA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hacimText" />

    <TextView
        android:id="@+id/SonucText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Sonuç :  "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hesaplaButton" />

    <TextView
        android:id="@+id/p"
        android:layout_width="27dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:text="p :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SonucText" />

</androidx.constraintlayout.widget.ConstraintLayout>