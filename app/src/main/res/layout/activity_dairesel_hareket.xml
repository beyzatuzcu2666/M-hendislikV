<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dersler.daireselHareket">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dersler.daireselHareket"
        tools:layout_editor_absoluteX="-108dp"
        tools:layout_editor_absoluteY="-27dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="T :"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/acisalPeriyotText"
            app:layout_constraintEnd_toStartOf="@+id/acisalPeriyotText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/acisalPeriyotText" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="188dp"
            android:layout_marginRight="188dp"
            android:layout_marginBottom="27dp"
            android:text="Çizgisel Hız"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/cizgiselPeriyotText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cizgiselPeriyotText"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/cizgiselPeriyotText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            android:layout_marginBottom="23dp"
            android:ems="10"
            android:hint="Periyodu giriniz"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/yaricapText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/cizgiselHesaplaButton"
            android:layout_width="103dp"
            android:layout_height="29dp"


            android:layout_marginStart="248dp"
            android:layout_marginLeft="248dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
