            app:layout_constraintTop_toBottomOf="@+id/yaricapText" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="30dp"
            android:text="Açısal Hız"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/acisalPeriyotText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sonucBirText" />

        <EditText
            android:id="@+id/acisalPeriyotText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:hint="Periyodu giriniz"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/acısalHesaplaButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <EditText
            android:id="@+id/yaricapText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="Yarıçapı giriniz"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/cizgiselHesaplaButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cizgiselPeriyotText" />

        <Button
            android:id="@+id/acısalHesaplaButton"
            android:layout_width="103dp"
            android:layout_height="29dp"


            android:layout_marginTop="24dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="118dp"
            android:background="@drawable/buttonshape"
            android:onClick="acısalHesapla"
            android:shadowColor="#77A879"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:text="HESAPLA"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cizgiselHesaplaButton"
